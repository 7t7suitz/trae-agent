{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug trae_agent CLI: Show Help",
            "type": "debugpy",
            "request": "launch",
            "module": "trae_agent.cli",
            "args": [
                "--help"
            ],
            "env": {
                "PYTHONPATH": "${workspaceFolder}"
            }
        },
        {
            "name": "Debug trae_agent CLI: Run with example config",
            "type": "debugpy",
            "request": "launch",
            "module": "trae_agent.cli",
            "args": [
                "--config",
                "trae_config.yaml.example"
            ],
            "env": {
                "PYTHONPATH": "${workspaceFolder}"
            }
        }
    ]
}
